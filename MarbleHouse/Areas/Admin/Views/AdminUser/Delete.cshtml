@model MarbleHouse.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
}

<br />
<br />

<h2 class="text-info">Delete or Disable User or Admin</h2>

<form asp-action="Delete" method="post">
    <div class="p-5 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="Email" class="form-control" readonly/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="PhoneNumber" class="form-control" readonly/>
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Delete/Disable" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}