@model IEnumerable<MarbleHouse.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h3 class="text-info">Users List</h3>
    </div>
    <div class="col-6 text-right">
        <a asp-area="Identity" asp-page="/Pages/Account/Register" class="btn btn-success"><i class="fas fa-plus"></i>  Create New User</a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(n => n.Name)
            </th>
            <th>
                @Html.DisplayNameFor(n => n.Email)
            </th>
            <th>
                @Html.DisplayNameFor(n => n.PhoneNumber)
            </th>
            <th>
                Disabled
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@Html.DisplayFor(n => item.Name)</td>
        <td>@Html.DisplayFor(n => item.Email)</td>
        <td>@Html.DisplayFor(n => item.PhoneNumber)</td>
        <td>
            @if (item.LockoutEnd != null && item.LockoutEnd > DateTime.Now)
            {
                <label>Disabled</label>
            }
        </td>
        <td>
            @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
            {
                <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fas fa-edit"></i>
                </a>
                <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="fas fa-trash-alt"></i>
                </a>
            }
        </td>
        
    </tr>
        }

    </table>
</div>