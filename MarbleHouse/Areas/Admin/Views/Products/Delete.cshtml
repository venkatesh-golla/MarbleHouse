@model MarbleHouse.Models.ViewModels.ProductsViewModel
@using MarbleHouse.Extensions
@{
    ViewData["Title"] = "Delete";
}

<br />
<br />

<h4 class="text-info">Delete Product</h4>

<form asp-action="Delete" method="post">
    <div class="p-lg-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" class="form-control" readonly/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" class="form-control" readonly/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductTypes.Name" class="form-control" readonly/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.SpecialTags"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.SpecialTags.Name" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ShadeColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ShadeColor" class="form-control"readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Available" class="form-control" readonly />
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius:8px;border:1px solid #bbb9b9" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}